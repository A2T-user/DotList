<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainMenuFragment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow"
    android:paddingHorizontal="6dp"
    android:paddingBottom="8dp"
    tools:context=".main.ui.fragments.MainMenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/floatinf_bar"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                android:scaleX="2"
                android:scaleY="2"
                android:src="@drawable/ic_launcher_foreground"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:text="@string/app_name"
                android:textColor="@color/yellow_dir"
                android:textSize="20sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@color/yellow_dir"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_description"
                android:text="@string/description"
                app:drawableStartCompat="@drawable/ic_desc"
                style="@style/TVMainMenu"/>

            <TextView
                android:id="@+id/tv_settings"
                android:text="@string/set_string"
                app:drawableStartCompat="@drawable/ic_settings"
                style="@style/TVMainMenu"/>

            <TextView
                android:id="@+id/tv_privacy_policy"
                android:layout_width="wrap_content"
                android:text="@string/privacy_policy"
                app:drawableStartCompat="@drawable/ic_privacy_policy"
                style="@style/TVMainMenu"/>

            <TextView
                android:id="@+id/tv_feedback"
                android:text="@string/feedback"
                app:drawableStartCompat="@drawable/ic_feedback"
                style="@style/TVMainMenu"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="6dp"
                android:layout_marginTop="4dp"
                android:background="@color/yellow_dir"/>

            <TextView
                android:id="@+id/tv_like"
                android:text="@string/like_string"
                app:drawableStartCompat="@drawable/ic_star"
                android:textColor="@color/yellow_dir"
                style="@style/TVMainMenu"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>