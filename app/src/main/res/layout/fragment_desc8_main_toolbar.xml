<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".description.ui.fragments.MainToolbarFragment8">

    <!-- Заголовок -->
    <TextView
        android:text="@string/desc_main_tb_title"
        style="@style/DescTitleText" />
    <View style="@style/DevirerView" />

    <ScrollView
        android:id="@+id/scrollView"
        style="@style/DescScroll">

        <LinearLayout style="@style/LLScrollContainer">

            <TextView
                android:text="@string/desc_main_tb_text1"
                style="@style/RegularText" />

            <include
                android:id="@+id/tb_top"
                layout="@layout/toolbar_top"/>

            <TextView
                android:text="@string/desc_main_tb_text2"
                android:layout_marginTop="4dp"
                style="@style/RegularText" />

            <TextView
                android:text="@string/desc_main_tb_text3"
                app:drawableStartCompat="@drawable/ic_burger"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                style="@style/RegularText"/>

            <TextView
                android:text="@string/desc_main_tb_text4"
                style="@style/RegularText" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>