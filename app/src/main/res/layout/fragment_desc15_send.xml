<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".description.ui.fragments.ConvertFragment14">

    <!-- Заголовок -->
    <TextView
        android:text="@string/desc_send_title"
        style="@style/DescTitleText" />
    <View style="@style/DevirerView" />

    <ScrollView style="@style/DescScroll">

        <LinearLayout style="@style/LLScrollContainer">

            <TextView
                style="@style/RegularText"
                android:text="@string/desc_send_text1"/>

            <LinearLayout style="@style/LLLineContainer">

                <TextView
                    style="@style/RegularText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/desc_send_text2" />

                <ImageView
                    android:src="@drawable/ic_send"
                    tools:ignore= "ContentDescription"
                    style="@style/IVSideBarStyle" />

            </LinearLayout>

            <TextView
                style="@style/RegularText"
                android:text="@string/desc_send_text3"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>