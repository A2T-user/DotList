<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/likeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorBar"
    android:scrollbarThumbVertical="@color/blue_icon"
    tools:context="com.a2t.myapplication.main.ui.fragments.LikeFragment">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mylist"
        android:layout_marginVertical="80dp"
        android:layout_gravity="center_horizontal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/yellow_dir"/>

    <TextView
        android:id="@+id/tv_like"
        android:text="@string/your_feedback"
        app:drawableStartCompat="@drawable/ic_star"
        style="@style/TVMainMenu"/>

    <TextView
        android:id="@+id/tv_send"
        android:text="@string/for_friends"
        app:drawableStartCompat="@drawable/ic_send"
        style="@style/TVMainMenu"/>

    <TextView
        android:id="@+id/tv_qr"
        android:text="@string/for_friends2"
        app:drawableStartCompat="@drawable/ic_uri_app_qr"
        style="@style/TVMainMenu"/>

</LinearLayout>