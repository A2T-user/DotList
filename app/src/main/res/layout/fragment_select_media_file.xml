<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorBackground"
    tools:context=".mediafile.ui.SelectMediaFileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorBar"
        android:paddingTop="6dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tv_gallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bookmark"
            android:textColor="?attr/colorMainText"
            android:paddingVertical="4dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/gallery"
            android:layout_marginHorizontal="1dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bookmark"
            android:textColor="?attr/colorMainText"
            android:paddingVertical="4dp"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="@string/app_name"
            android:layout_marginEnd="0.5dp"
            android:gravity="center"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:animateLayoutChanges="true">

        <!-- Рециклер -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingHorizontal="1dp"
            android:paddingTop="2dp"
            android:paddingBottom="300dp"
            android:scrollbarThumbVertical="@color/blue_icon"
            android:scrollbars="vertical"/>

        <!-- Фильтр -->
        <LinearLayout
            android:id="@+id/ll_select_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rect_color_bar"
            android:layout_gravity="start|bottom"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="match_parent"
                android:text="@string/all"
                style="@style/TVMenuMediaFile"/>

            <TextView
                android:id="@+id/tv_photo"
                android:layout_width="wrap_content"
                android:text="@string/photo"
                style="@style/TVMenuMediaFile"/>

            <TextView
                android:id="@+id/tv_video"
                android:layout_width="wrap_content"
                android:text="@string/video"
                style="@style/TVMenuMediaFile"/>

            <TextView
                android:id="@+id/tv_selected_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="@string/all"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_filter"
                android:drawablePadding="6dp"/>
        </LinearLayout>

        <!-- Кнопка камера -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rect_color_bar"
            android:layout_gravity="end|bottom"
            android:animateLayoutChanges="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:padding="2dp">

            <ImageView
                android:id="@+id/iv_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_video_camera"
                android:padding="8dp"
                android:visibility="gone"
                android:contentDescription="@string/video_hint" />

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_photo_camera"
                android:padding="8dp"
                android:visibility="visible"
                tools:ignore="contentDescription"
                android:contentDescription="@string/photo_hint"/>
        </LinearLayout>

        <!-- Прогрессбар -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_white_alpha"
            android:padding="6dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/blue_icon"
            android:indeterminate="true"
            android:visibility="gone"/>

        <!-- Кнопка прпокрутки -->
        <ImageView
            android:id="@+id/iv_btn_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="20dp"
            android:alpha="0.7"
            android:background="@drawable/circle_color_bar"
            android:padding="12dp"
            android:src="@drawable/ic_scroll_down"
            android:visibility="gone"
            tools:ignore="contentDescription" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:gravity="center"
        android:background="?attr/colorBar">

        <CheckBox
            android:id="@+id/cb_copy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:checked="true"
            android:theme="@style/CheckBox_Style"
            android:text="@string/copy_file"/>

        <CheckBox
            android:id="@+id/cb_transfer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:theme="@style/CheckBox_Style"
            android:text="@string/transfer"/>

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:text="@string/select"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="4dp"
            android:textColor="?attr/colorMainText"
            style="@style/BTNSelectMediaFile" />

    </LinearLayout>
    

</LinearLayout>