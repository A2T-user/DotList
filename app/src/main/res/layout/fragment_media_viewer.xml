<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="?attr/colorBackground">

    <!-- Верхняя панель -->
    <LinearLayout
        android:id="@+id/ll_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorBar"
        android:paddingVertical="6dp"
        android:paddingHorizontal="8dp"
        android:gravity="center_vertical">

        <!-- Основное поле -->
        <com.a2t.myapplication.main.ui.ActionEditText
            android:id="@+id/aet_record"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:importantForAutofill="no"
            style="@style/ActionEditText"/>

        <!-- Поле примечание -->
        <com.a2t.myapplication.main.ui.ActionEditText
            android:id="@+id/aet_note"
            android:layout_width="wrap_content"
            android:maxWidth="60sp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="12dp"
            android:textSize="15sp"
            android:hint="@string/note_hint"
            android:selectAllOnFocus="true"
            android:importantForAutofill="no"
            style="@style/ActionEditText"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_media_minus"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_media_minus"
                style="@style/PreviewBtnMtnuStyle"
                tools:ignore="contentDescription"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_send"
                android:src="@drawable/ic_menu_white"
                style="@style/PreviewBtnMtnuStyle"
                tools:ignore="contentDescription"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Изображение -->
    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:id="@+id/photo_window"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:visibility="gone"/>


</LinearLayout>