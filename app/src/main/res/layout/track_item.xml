<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/holderContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:paddingVertical="@dimen/ic_padding"
    android:paddingHorizontal="12dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">
    
    <ImageView
        android:id="@+id/ivArtwork"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_album"
        tools:ignore="contentDescription"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvTrackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="Track Name"
        style="@style/RegularTextStyle"
        android:maxWidth="270dp"
        app:layout_constraintStart_toEndOf="@id/ivArtwork"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tvArtistName"
        style="@style/ArtistName"
        android:ellipsize="end"
        tools:text="Artist Name"
        android:maxWidth="220dp"
        app:layout_constraintStart_toStartOf="@id/tvTrackName"
        app:layout_constraintTop_toBottomOf="@id/tvTrackName"/>

    <TextView
        android:id="@+id/tvDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/RegularTextStyle"
        android:textSize="11sp"
        android:text="@string/dot"
        android:textColor="?attr/colorSmallText"
        app:layout_constraintStart_toEndOf="@id/tvArtistName"
        app:layout_constraintTop_toBottomOf="@id/tvTrackName"
        android:layout_marginHorizontal="4dp"/>

    <TextView
        android:id="@+id/tvTrackTime"
        style="@style/ArtistName"
        android:minWidth="30dp"
        tools:text="99:99"
        app:layout_constraintStart_toEndOf="@id/tvDot"
        app:layout_constraintTop_toBottomOf="@id/tvTrackName"
        android:layout_marginHorizontal="4dp"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_forward"
        tools:ignore="contentDescription"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>