<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/desc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".description.ui.DescriptionActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="bottom|center"
        android:background="@drawable/circle_color_bar"
        android:layout_marginBottom="40dp">

        <ImageView
            android:id="@+id/go_to_desc_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            tools:ignore="contentDescription"
            android:background="@drawable/circle_color_bar"
            android:src="@drawable/ic_desc_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <ImageView
            android:id="@+id/go_to_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="contentDescription"
            android:src="@drawable/ic_arrow_triangular"
            android:padding="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/go_to_desc_content"/>

        <ImageView
            android:id="@+id/go_to_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="contentDescription"
            android:src="@drawable/ic_arrow_triangular"
            android:rotation="180"
            android:padding="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/go_to_desc_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|bottom"
        android:background="@drawable/shadow_circle"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="24dp">

        <ImageView android:id="@+id/point1"
            tools:ignore="contentDescription"
            style="@style/PointStyle"/>

        <ImageView android:id="@+id/point2"
            tools:ignore="contentDescription"
            style="@style/PointStyle"/>

        <ImageView android:id="@+id/point3"
            tools:ignore="contentDescription"
            style="@style/PointStyle"/>

        <ImageView android:id="@+id/point4"
            tools:ignore="contentDescription"
            style="@style/PointStyle"/>

        <ImageView android:id="@+id/point5"
            tools:ignore="contentDescription"
            style="@style/PointStyle"/>

        <ImageView android:id="@+id/point6"
            tools:ignore="contentDescription"
            style="@style/PointStyle"/>

        <ImageView android:id="@+id/point7"
            tools:ignore="contentDescription"
            style="@style/PointStyle"/>

        <ImageView android:id="@+id/point8"
            tools:ignore="contentDescription"
            style="@style/PointStyle"/>

        <ImageView android:id="@+id/point9"
            tools:ignore="contentDescription"
            style="@style/PointStyle"/>

        <ImageView android:id="@+id/point10"
            tools:ignore="contentDescription"
            style="@style/PointStyle"/>

        <ImageView android:id="@+id/point11"
            tools:ignore="contentDescription"
            style="@style/PointStyle"/>

        <ImageView android:id="@+id/point12"
            tools:ignore="contentDescription"
            style="@style/PointStyle"/>

        <ImageView android:id="@+id/point13"
            tools:ignore="contentDescription"
            style="@style/PointStyle"/>

        <ImageView android:id="@+id/point14"
            tools:ignore="contentDescription"
            style="@style/PointStyle"/>

        <ImageView android:id="@+id/point15"
            tools:ignore="contentDescription"
            style="@style/PointStyle"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="70dp"
            android:paddingEnd="10dp"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <include android:id="@+id/desc_content"
                layout="@layout/description_content"/>


        </LinearLayout>



    </LinearLayout>

</FrameLayout>