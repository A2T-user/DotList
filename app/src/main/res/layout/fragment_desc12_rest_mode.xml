<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".description.ui.fragments.RestoreModeFragment12">

    <!-- Заголовок -->
    <TextView
        android:text="@string/desc_rest_mode_title"
        style="@style/DescTitleText" />
    <View style="@style/DevirerView" />

    <ScrollView
        android:id="@+id/scrollView"
        style="@style/DescScroll">

        <LinearLayout style="@style/LLScrollContainer">

            <TextView
                style="@style/RegularText"
                android:text="@string/desc_rest_mode_text1"/>

            <LinearLayout style="@style/LLLineContainer"
                android:paddingHorizontal="0dp">

                <TextView
                    style="@style/RegularText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/desc_rest_mode_text2" />

                <ImageView
                    android:src="@drawable/ic_rest_mode_yell"
                    tools:ignore= "ContentDescription"
                    style="@style/IVSideBarStyle" />

            </LinearLayout>

            <TextView
                style="@style/RegularText"
                android:text="@string/desc_del_mode_text3"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:paddingVertical="8dp"
                android:background="?attr/colorBackground">

                <include android:id="@+id/tb_modes"
                    layout="@layout/toolbar_modes"/>

            </FrameLayout>

            <TextView
                style="@style/RegularText"
                android:text="@string/desc_rest_mode_text3"/>

            <LinearLayout style="@style/LLLineContainer"
                android:paddingHorizontal="0dp">

                <TextView
                    style="@style/RegularText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/desc_rest_mode_text4" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_fon_blue"
                    android:paddingHorizontal="2dp"
                    android:paddingVertical="4dp"
                    android:src="@drawable/ic_basket_white"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <TextView
                style="@style/RegularText"
                android:text="@string/desc_rest_mode_text5"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>