<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CheckBox_Style">
        <item name="buttonTint">@color/blue_icon</item>
    </style>

    <style name="SmallBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:textColor">@color/yellow_dir</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DeviderMenuFormatStyle">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:background">?attr/colorYellowIcon</item>
    </style>

    <style name="LLContextMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/click_selector</item>
    </style>

    <style name="TVContextMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorMainText</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">@drawable/btn_rect_fon</item>
    </style>

    <style name="LLSettingThemeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/colorBackground</item>
    </style>

    <style name="TVSettingStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorMainText</item>
    </style>

    <style name="IVSettingThemeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:src">@drawable/ic_check_blue</item>
        <item name="android:alpha">0</item>
    </style>

    <style name="LLSideBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:background">@drawable/click_selector</item>
    </style>

    <style name="TVSideBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="IVSideBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/btn_round</item>
    </style>

    <!--<style name="TVMoveModeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/btn_rect</item>
        <item name="android:textColor">?attr/colorBarText</item>
        <item name="android:textSize">12sp</item>
    </style>-->

    <style name="IVBarModesStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TVBarModesStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/btn_rect</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorBarText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@drawable/switch_selector</item>
        <item name="android:textColor">@color/yellow_dir</item>
        <item name="android:theme">@style/MySwitch</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@color/blue_icon</item>
        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@color/blue_icon</item>
        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@color/yellow_dir</item>

    </style>

    <style name="TVMenuMoveStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_rect</item>
        <item name="android:padding">6dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorBarText</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="BackgroundBtnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:background">@drawable/btn_rect_white_alpha</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="MainTextStyle">
        <item name="android:textColor">?attr/colorMainText</item>
        <item name="android:textColorHint">@color/color_hint</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="MainTextStyle.String">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BlueDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@color/blue_icon</item>
    </style>

    <style name="СhapterStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorMainText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingStart">12dp</item>
    </style>

    <style name="SettTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">?attr/colorMainText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ActionEditText" parent="MainTextStyle.String">
        <item name="android:enabled">false</item>
        <item name="android:clickable">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:background">@drawable/edit_text_selector</item>
    </style>
</resources>